{
  "name": "marco-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "run-p watch:tailwind start:react",
    "watch:tailwind": "postcss -w src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "start:react": "react-scripts start",
    "prebuild": "npm run build:tailwind",
    "build:tailwind": "postcss src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint ."
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "autoprefixer": "^9.7.6",
    "axios": "^0.21.1",
    "leaflet": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-leaflet": "^2.6.3",
    "react-scripts": "3.4.1",
    "tailwindcss": "^1.3.5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "./node_modules/commitlint/cli.js -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
